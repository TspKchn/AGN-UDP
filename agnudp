#!/usr/bin/env bash
set -e

CFG="/etc/hysteria/config.json"
DB="/etc/hysteria/users.db"
STATE="/etc/agnudp"
MODEFILE="$STATE/mode"
LASTSYNC="$STATE/last_sync"

SERVICE="hysteria-server"

mkdir -p "$STATE"
[[ ! -f "$MODEFILE" ]] && echo "manual" > "$MODEFILE"

MODE=$(cat "$MODEFILE")
AUTODELETE="ENABLED"
[[ "$MODE" != "manual" ]] && AUTODELETE="DISABLED"

LASTSYNC_TXT="-"
[[ -f "$LASTSYNC" ]] && LASTSYNC_TXT=$(cat "$LASTSYNC")

pause(){ read -rp "Press Enter to continue..."; }

header() {
  clear
  echo "======================================"
  echo "           AGN-UDP MANAGER             "
  echo "======================================"
  echo " Mode       : $MODE"
  echo " AutoDelete : $AUTODELETE"
  echo " Last Sync  : $LASTSYNC_TXT"
  echo "--------------------------------------"
}

update_cfg() {
  local tmp="/tmp/agnudp-cfg.json"
  sqlite3 "$DB" \
    "select username||\":\"||password from users where date(expire)>=date('now')" |
  jq -R . | jq -s '.' |
  jq --argfile a - "$CFG" '.auth.config=$a' "$CFG" > "$tmp"
  mv "$tmp" "$CFG"
  systemctl restart "$SERVICE" >/dev/null 2>&1 || true
}

#######################################
# USER MANAGEMENT
#######################################
add_user() {
  read -rp "Username: " u
  read -rp "Password: " p
  read -rp "Days: " d
  e=$(date -d "+$d days" +%F)
  sqlite3 "$DB" "insert or replace into users values('$u','$p','$e')"
  update_cfg
  echo "[✓] User added"
}

extend_user() {
  read -rp "Username: " u
  read -rp "Add days: " d
  cur=$(sqlite3 "$DB" "select expire from users where username='$u'")
  [[ -z "$cur" ]] && { echo "User not found"; return; }
  new=$(date -d "$cur +$d days" +%F)
  sqlite3 "$DB" "update users set expire='$new' where username='$u'"
  update_cfg
  echo "[✓] Extended"
}

delete_user() {
  read -rp "Username: " u
  sqlite3 "$DB" "delete from users where username='$u'"
  update_cfg
  echo "[✓] Deleted"
}

list_user() {
  echo
  sqlite3 "$DB" "select username || ' | ' || expire from users order by expire;"
  echo
}

#######################################
# BACKUP / RESTORE
#######################################
backup_db() {
  read -rsp "Backup password: " p; echo
  out="/backup/agnudp-users.db.7z"
  rm -f "$out"
  7z a -p"$p" -mhe=on "$out" "$DB" >/dev/null
  echo "[✓] Backup saved: $out"
}

restore_db() {
  read -rp "Backup server IP/Domain: " ip
  read -rsp "Backup password: " p; echo
  tmp="/tmp/agnudp-restore"
  rm -rf "$tmp"; mkdir -p "$tmp"

  curl -fsSL "http://$ip:8080/backup/agnudp-users.db.7z" -o "$tmp/db.7z" \
    || { echo "Download failed"; return; }

  7z x -p"$p" "$tmp/db.7z" -o"$tmp" >/dev/null \
    || { echo "Wrong password"; return; }

  cp "$tmp/users.db" "$DB"
  update_cfg
  date +"%F %T" > "$LASTSYNC"
  echo "[✓] Restore completed"
}

#######################################
# SYNC (QUIET)
#######################################
ssh_exec() {
  sshpass -p "$SSH_PASS" ssh \
    -o StrictHostKeyChecking=no \
    -o UserKnownHostsFile=/dev/null \
    -o LogLevel=ERROR \
    -T -p "$SSH_PORT" "$SSH_USER@$SSH_HOST" "$1"
}

sync_import() {
  sqlite3 "$DB" "delete from users;"
  while IFS='|' read -r u e; do
    [[ -z "$u" ]] && continue
    sqlite3 "$DB" "insert into users values('$u','$u','$e')"
  done <<< "$1"
  update_cfg
  date +"%F %T" > "$LASTSYNC"
}

sync_local() {
  DATA=$(sqlite3 "$DB" "select username,expire from users;")
  sync_import "$DATA"
  echo "manual" > "$MODEFILE"
  echo "[✓] Local sync done"
}

sync_remote() {
  read -rp "Remote IP: " SSH_HOST
  read -rp "SSH Port [22]: " SSH_PORT; SSH_PORT=${SSH_PORT:-22}
  read -rp "SSH User: " SSH_USER
  read -rsp "SSH Password: " SSH_PASS; echo

  DATA=$(ssh_exec "sqlite3 /etc/hysteria/users.db 'select username,expire from users;'") || true
  [[ -z "$DATA" ]] && { echo "Sync failed"; return; }

  sync_import "$DATA"
  echo "sync:remote" > "$MODEFILE"
  echo "[✓] Remote sync completed"
}

sync_3xui() {
  read -rp "3x-ui IP: " SSH_HOST
  read -rp "SSH Port [22]: " SSH_PORT; SSH_PORT=${SSH_PORT:-22}
  read -rp "SSH User: " SSH_USER
  read -rsp "SSH Password: " SSH_PASS; echo

  DATA=$(ssh_exec "sqlite3 /etc/x-ui/x-ui.db \"select email,expiry_time from client_traffics;\"") || true
  [[ -z "$DATA" ]] && { echo "Sync failed"; return; }

  DATA=$(echo "$DATA" | awk -F'|' '{print $1 "|" strftime("%Y-%m-%d",$2/1000)}')
  sync_import "$DATA"
  echo "sync:3xui" > "$MODEFILE"
  echo "[✓] 3x-ui sync completed"
}

cleanup_expired() {
  [[ "$AUTODELETE" != "ENABLED" ]] && return
  sqlite3 "$DB" "delete from users where date(expire)<date('now')"
  update_cfg
  echo "[✓] Expired users cleaned"
}

#######################################
# MENU
#######################################
while true; do
  header
  echo " 1) Add User"
  echo " 2) Extend User"
  echo " 3) Delete User"
  echo " 4) List Users"
  echo
  echo " 5) Backup"
  echo " 6) Restore"
  echo
  echo " 7) Sync Local"
  echo " 8) Sync Remote"
  echo " 9) Sync 3x-ui"
  echo
  echo "10) Cleanup Expired"
  echo
  echo " 0) Exit"
  echo "--------------------------------------"
  read -rp "Select: " c

  case "$c" in
    1) add_user ;;
    2) extend_user ;;
    3) delete_user ;;
    4) list_user ;;
    5) backup_db ;;
    6) restore_db ;;
    7) sync_local ;;
    8) sync_remote ;;
    9) sync_3xui ;;
    10) cleanup_expired ;;
    0) exit ;;
  esac

  pause
done
