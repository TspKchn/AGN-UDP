#!/usr/bin/env bash
set -e

### ================= PATH =================
CFG="/etc/hysteria/config.json"
DB="/etc/hysteria/users.db"

STATE="/etc/agnudp"
MODEFILE="$STATE/mode"
LASTSYNC="$STATE/last_sync"

BACKUP_DIR="/backup"
BACKUP_FILE="$BACKUP_DIR/agnudp-users.db.7z"

REPO_RAW="https://raw.githubusercontent.com/TspKchn/AGN-UDP/main/agnudp"

mkdir -p "$STATE"
[[ ! -f "$MODEFILE" ]] && echo "manual" > "$MODEFILE"

MODE=$(cat "$MODEFILE")

AUTODELETE="ENABLED"
[[ "$MODE" != "manual" ]] && AUTODELETE="DISABLED"

LASTSYNC_TXT="-"
[[ -f "$LASTSYNC" ]] && LASTSYNC_TXT=$(cat "$LASTSYNC")

pause(){ read -rp "Press Enter to continue..."; }

### ================= UI =================
header() {
  clear

  # อ่านสถานะใหม่ทุกครั้ง
  MODE=$(cat "$MODEFILE" 2>/dev/null || echo "manual")

  AUTODELETE="ENABLED"
  [[ "$MODE" != "manual" ]] && AUTODELETE="DISABLED"

  LASTSYNC_TXT="-"
  [[ -f "$LASTSYNC" ]] && LASTSYNC_TXT=$(cat "$LASTSYNC")

  echo "======================================"
  echo "           AGN-UDP MANAGER"
  echo "======================================"
  echo " Mode       : $MODE"
  echo " AutoDelete : $AUTODELETE"
  echo " Last Sync  : $LASTSYNC_TXT"
  echo "--------------------------------------"
}

### ================= CORE =================
update_cfg() {
  users=$(sqlite3 "$DB" "select username||\":\"||password from users where date(expire)>=date('now')" 2>/dev/null)
  jq ".auth.config = $(printf '%s\n' "$users" | jq -R . | jq -s .)" "$CFG" > /tmp/cfg && mv /tmp/cfg "$CFG"
  systemctl restart hysteria-server >/dev/null 2>&1 || true
}

### ================= USER =================
add_user() {
  read -rp "Username: " u
  read -rp "Password: " p
  read -rp "Days: " d
  e=$(date -d "+$d days" +%F)
  sqlite3 "$DB" "insert or replace into users values('$u','$p','$e')"
  update_cfg
}

extend_user() {
  read -rp "Username: " u
  read -rp "Add days: " d
  cur=$(sqlite3 "$DB" "select expire from users where username='$u'")
  new=$(date -d "$cur +$d days" +%F)
  sqlite3 "$DB" "update users set expire='$new' where username='$u'"
  update_cfg
}

delete_user() {
  read -rp "Username: " u
  sqlite3 "$DB" "delete from users where username='$u'"
  update_cfg
}

list_user() {
  echo
  sqlite3 "$DB" "select username || ' | ' || expire from users;"
}

### ================= BACKUP =================
backup_db() {
  read -rp "Backup password: " p
  rm -f "$BACKUP_FILE"
  7z a -p"$p" -mhe=on "$BACKUP_FILE" "$DB" >/dev/null
  echo "[✓] Backup saved"
}

restore_db() {
  read -rp "Restore Server IP/Domain: " ip
  read -rp "Backup password: " p

  echo
  echo "⏳ Restoring backup..."
  echo

  tmp=/tmp/agnudp-restore
  rm -rf "$tmp" && mkdir -p "$tmp"

  curl -fsSL "http://$ip:8080/backup/$(basename $BACKUP_FILE)" -o "$tmp/db.7z" || {
    echo "❌ Download failed"; return;
  }

  7z x -p"$p" "$tmp/db.7z" -o"$tmp" >/dev/null || {
    echo "❌ Wrong password"; return;
  }

  cp "$tmp/$(basename $DB)" "$DB"
  update_cfg
  echo "[✓] Restore completed"
}

### ================= SSH =================
ssh_exec() {
  sshpass -p "$SSH_PASS" ssh \
    -o StrictHostKeyChecking=no \
    -o UserKnownHostsFile=/dev/null \
    -o LogLevel=ERROR \
    -T -p "$SSH_PORT" "$SSH_USER@$SSH_HOST" "$1"
}

### ================= SYNC CORE =================
sync_import_expire_date() {
  sqlite3 "$DB" "delete from users;"
  while IFS='|' read -r u exp; do
    [[ -z "$u" || -z "$exp" ]] && continue
    sqlite3 "$DB" "insert into users values('$u','$u','$exp');"
  done <<< "$1"

  update_cfg
  date +"%F %T" > "$LASTSYNC"
  LASTSYNC_TXT=$(cat "$LASTSYNC")
}

### ================= SYNC LOCAL =================
sync_local() {
  echo
  echo "⏳ Syncing local users..."
  echo

  DATA=$(sqlite3 "$DB" "select username,expire from users;")

  echo "sync:local" > "$MODEFILE"
  MODE=$(cat "$MODEFILE")
  AUTODELETE="DISABLED"

  sync_import_expire_date "$DATA"

  echo "[✓] Sync local completed"
}

### ================= SYNC WEBMIN =================
sync_xui() {
  read -rp "3x-ui Server IP: " SSH_HOST
  read -rp "SSH Port [22]: " SSH_PORT
  SSH_PORT=${SSH_PORT:-22}
  read -rp "SSH User: " SSH_USER
  read -rp "SSH Password: " SSH_PASS
  echo

  echo "⏳ Syncing x-ui clients..."

  DATA=$(sshpass -p "$SSH_PASS" ssh \
    -o StrictHostKeyChecking=no \
    -o UserKnownHostsFile=/dev/null \
    -o LogLevel=ERROR \
    -T -p "$SSH_PORT" "$SSH_USER@$SSH_HOST" \
    "sqlite3 /etc/x-ui/x-ui.db \
     \"SELECT settings FROM inbounds WHERE settings LIKE '%clients%';\"")

  [[ -z "$DATA" ]] && {
    echo "❌ Sync x-ui failed (no data)"
    return
  }

  # ล้าง user เก่าก่อน
  sqlite3 "$DB" "DELETE FROM users;"

  echo "$DATA" | jq -r '
    .clients[] |
    select(.enable == true) |
    "\(.id)|\(
      if (.expiryTime | tonumber) <= 0 then
        "2099-12-31"
      else
        (.expiryTime / 1000 | strftime("%Y-%m-%d"))
      end
    )"
  ' | while IFS='|' read -r USER EXPIRE; do
        [[ -z "$USER" ]] && continue
        sqlite3 "$DB" \
          "INSERT OR REPLACE INTO users VALUES ('$USER','$USER','$EXPIRE');"
      done

  update_cfg

  echo "sync:x-ui" > "$MODEFILE"
  date +"%F %T" > "$LASTSYNC"

  echo "✅ Sync x-ui completed"
}

### ================= CLEANUP =================
cleanup_expired() {
  [[ "$AUTODELETE" != "ENABLED" ]] && {
    echo "[!] AutoDelete disabled in sync mode"
    return
  }
  sqlite3 "$DB" "delete from users where date(expire)<date('now');"
  update_cfg
  echo "[✓] Cleanup completed"
}

### ================= UPDATE =================
update_agnudp() {
  echo
  echo "⏳ Updating agnudp..."
  echo
  tmp=/tmp/agnudp.$$
  curl -fsSL "$REPO_RAW" -o "$tmp" || { echo "❌ Update failed"; return; }
  chmod +x "$tmp"
  mv "$tmp" /usr/local/bin/agnudp
  exec agnudp
}

### ================= MENU =================
while true; do
  header
  echo " 1) Add User"
  echo " 2) Extend User"
  echo " 3) Delete User"
  echo " 4) List Users"
  echo
  echo " 5) Backup"
  echo " 6) Restore"
  echo
  echo " 7) Sync Local"
  echo " 8) Sync Webmin"
  echo " 9) Sync x-ui"
  echo
  echo "10) Cleanup Expired"
  echo "11) Update agnudp"
  echo
  echo " 0) Exit"
  echo "--------------------------------------"
  read -rp "Select: " c

  case $c in
    1) add_user ;;
    2) extend_user ;;
    3) delete_user ;;
    4) list_user ;;
    5) backup_db ;;
    6) restore_db ;;
    7) sync_local ;;
    8) sync_webmin ;;
    9) sync_xui ;;
    10) cleanup_expired ;;
    11) update_agnudp ;;
    0) exit ;;
  esac
  pause
done
